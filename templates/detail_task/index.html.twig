{% extends 'base.html.twig' %}

{% block title %}Hello DetailTaskController!{% endblock %}

{% block body %}

<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div class="example-wrapper">

	{% if task[0] is not empty %}
   <h3>{{task[0].getId()}}</h3>
   <h5>{{task[0].getImportance()}}</h5>
   <h5>{{task[0].getContent()}}</h5>
   <h5>{{task[0].isStade()}}</h5>
   {% endif %}
</div>
<div class="form-control">
    <i class="fa fa-calendar"></i>
    {{ form_label(task[0].) }}
    {{ form_widget(task.dueDate) }}
    <small>{{ form_help(task.dueDate) }}</small>
    <div class="form-error">
        {{ form_errors(task.dueDate) }}
    </div>
</div>
{% endblock %}

